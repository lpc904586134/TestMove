<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <org.lpc.myapplication.move.MoveViewByLayoutMethod
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/move1"/>
    <org.lpc.myapplication.move.MoveViewByLayoutParam
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/move2"/>
    <org.lpc.myapplication.move.MoveViewByScrollBy
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/move3"/>

    <org.lpc.myapplication.move.MoveViewByOffsetLeftAndRight
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/move4"/>
    <org.lpc.myapplication.move.MoveViewByScroller
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/move5"/>
    <org.lpc.myapplication.move.MoveViewByViewDragHelper
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/move6">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="水平"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="垂直"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="任意恢复"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>
    </org.lpc.myapplication.move.MoveViewByViewDragHelper>

</LinearLayout>